<h1>Edit Event</h1>

<!-- I would break this out into a form partial to dry up your new and edit views -->

<div class="new_form">
  <%= form_for @event do |f| %>
    <div>
      <%= f.label :From_who? %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :What_happened_this_time? %>
      <%= f.text_field :reason %>
    </div>

      <%= f.label :I_want %>
    <div class="emoji-picker-container">
      <%= f.text_field :award, class: "text-box", data: { emojiable: true } %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>

  <%= form_for @event, method: :delete do |f| %>
    <%= f.submit "Delete this event!", class: "delete", :class => "button" %>
  <% end %>
</div>


<div class="back">
<%= link_to 'Back', events_path %>
</div>
