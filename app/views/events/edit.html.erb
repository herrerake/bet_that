<h1>Edit Event</h1>

<%= form_for @event do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :reason %>
  <%= f.text_field :reason %>
</div>

  <%= f.label :award %>
  <div class ="emoji-picker-container">
  <%= f.text_field :award, data: { emojiable: true }%>
</div>

<div>
  <%= f.submit %>
</div>


<% end %>
<%= form_for @event, method: :delete do |f| %>
<%= f.submit "Delete!", class: "delete" %>
<% end %>

<%= link_to 'Back', events_path %>
