<h2>Sign Up</h2>

<div class="new_form">
  <%= form_for @user, url: session_path, method: :post do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Submit", :class => "button" %>
  <% end %>
</div>

<br>
<div class="back">
  <%= link_to 'Back', events_path %>
</div>
